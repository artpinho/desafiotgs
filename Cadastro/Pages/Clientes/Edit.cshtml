@page
@model Cadastro.Pages_Clientes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cliente.Id" />
            <div class="form-group">
                <label asp-for="Cliente.Name" class="control-label"></label>
                <input asp-for="Cliente.Name" class="form-control" />
                <span asp-validation-for="Cliente.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="LogotipoUpload" class="control-label">Logotipo</label>
                <input type="file" asp-for="LogotipoUpload" class="form-control"/>
                <span asp-validation-for="LogotipoUpload" class="text-danger"></span>
             </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Alterar" class="btn btn-warning" />
                <a asp-page="./Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

