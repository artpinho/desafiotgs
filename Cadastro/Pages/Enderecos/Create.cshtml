@page
@model Cadastro.Pages_Enderecos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>

<h4>Endereco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Endereco.Logradouro" class="control-label"></label>
                <input asp-for="Endereco.Logradouro" class="form-control" />
                <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.ClienteId" class="control-label"></label>
                <select asp-for="Endereco.ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Adicionar" class="btn btn-success" />
                <a asp-page="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>
